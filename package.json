{
  "name": "quickfrench",
  "version": "0.1.0",
  "private": true,
  "description": "Lightning-fast French vocabulary trainer with multiple-choice & typing modes, bi-directional translation, and offline-friendly caching.",
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "generate:static": "node ./scripts/generate-static-data.mjs",
    "start": "next start",
    "prebuild": "bun run scripts/generate-static-data.mjs",
    "prestart": "bun run scripts/generate-static-data.mjs",
    "generate:data": "bun run scripts/generate-static-data.mjs",
    "postinstall": "bun run scripts/generate-static-data.mjs || echo 'skipping static data gen'",
    "lint": "next lint",
    "typecheck": "tsc --noEmit && echo TYPECHECK_OK || echo TYPECHECK_FAIL",
    "format": "prettier --write ."
  },
  "dependencies": {
    "@internationalized/date": "^3.8.2",
    "@libsql/client": "^0.15.12",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.539.0",
    "next": "15.3.5",
    "react": "^19.1.1",
    "react-aria-components": "^1.11.0",
    "react-dom": "^19.1.1",
    "tailwind-merge": "^3.3.1"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@tailwindcss/postcss": "^4.1.12",
    "@types/node": "^20.19.11",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "eslint": "^9.33.0",
    "eslint-config-next": "15.3.5",
    "tailwindcss": "^4.1.12",
    "tw-animate-css": "^1.3.7",
    "typescript": "^5.9.2"
  }
}
